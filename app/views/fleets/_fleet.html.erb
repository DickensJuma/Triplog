<li class="fleet">
  <div>
    <div class='fleet-attribution' >
      <%= link_to fleet.user.name, user_path(fleet.user), class: 'fleet-author' %>
    </div>
    <div class='fleet-liking'>
      <span class='fleet-date'> <%= fleet.created_at.strftime("%Y/%m/%d") %> </span>

      
    </div>
  </div>
  <p class="fleet-content">
    <%= fleet.title %>
  </p>

  <div class='fleet-mileages-section'>
    <% fleet.mileages.each do |mileage| %>
      <div class="fleet-mileages">
        <p>
          <b><%= mileage.user.name %>:</b> <%= mileage.distance %><%= 'KM' %>
        </p>
        <span> <%= mileage.created_at.strftime("%Y/%m/%d") %> </span>
      </div>
    <% end %>

    <%= form_for(fleet.mileages.new, url: fleet_mileages_path(fleet)) do |form| %>
      <%= form.number_field :distance, id: :mileage_distance, class: 'form-control', placeholder: 'Add new Mileage' %>
      <%= form.submit 'Add Mileage', class: 'btn btn-secondary' %>
    <% end %>
  </div>

</li>
