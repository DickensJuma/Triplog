<h2>Create Fleet</h2>
<%= form_for(@fleet, html: {multipart: true}) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, id: :fleet_title, class: 'form-control', placeholder: 'Add New Fleet' %> <%= form.label :image, "Attach an Image" %>
  <%= form.file_field :image , class: 'form-control-input' %>
  <p>
   <% if @fleet.image.exists? %>
      <%= image_tag fleet.image.url class:'custom-file-input' %><br/>
  <% end %>
 
</p>
  <% if @fleet.errors.full_messages.any? %>
    <p class="errors">
      <%= "Fleet could not be saved. #{@fleet.errors.full_messages.join('. ')}" %>
    </p>
  <% end %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    All Fleet
  </h3>
  <ul class="fleets">
    <%= render @timeline_fleets %>
  </ul>
</article>
