<!DOCTYPE html>
<html>
  <head>
    <title>TripLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="nav">
    <%= image_tag 'https://pbs.twimg.com/profile_images/856695395770093568/UZGwYT5o_400x400.jpg',id: 'image_id'%>
      <%= link_to 'Fleets', root_path %>
      <div class="menu">
       
        <div class="menu-item">
          <%= menu_link_to 'All Members', users_path %>
        </div>
      </div>
      <% if current_user %>
       <%= link_to current_user.name, current_user %>
        <%= link_to 'Logout', '/logout', method: :delete %>
      
      <% else %>
        <%= link_to 'Sign in', '/login' %>
      <% end %>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
